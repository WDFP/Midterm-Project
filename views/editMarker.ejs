<html>
  <head>
    <title> Edit Marker </title>
      <!--Custom CSS design-->
      <!-- Header-->
      <link rel="stylesheet" href="/styles/header.css">
      <!-- Homepage-->
      <link rel="stylesheet" href="/styles/homepage.css">
      <!-- createMap-->
      <link rel="stylesheet" href="/styles/createMap.css">

      <script src="https://kit.fontawesome.com/dd66a066a2.js" crossorigin="anonymous"></script>
  </head>
  <%- include('partials/header') %>
  <body>
    <form action="editMarkerSubmit" method="POST">
      <div class="container">
        <h1>Edit Marker</h1>
        <p>Please fill in this form to edit your marker.</p>
        <hr>

        <label for="marker_id"><b>ID</b></label>
        <p><%= id %></p>

        <label for="name"><b>Name</b></label>
        <input type="text" placeholder="Enter Name (ex. Washington DC)" name="name" id="name" required>

        <label for="description"><b>Description</b></label>
        <input type="text" placeholder="Enter description (ex. Best places for burgers)" name="description" id="description" required>

        <label for="image_url"><b>Image URL</b></label>
        <input type="text" placeholder="Enter URL (ex. https://www.pexels.com/photo/)" name="image_url" id="image_url" required>

        <label for="latitude"><b>Latitude</b></label>
        <input type="text" placeholder="Latitude (ex. 38.8951)" name="latitude" id="latitude" required>

        <label for="longitude"><b>Longitude</b></label>
        <input type="text" placeholder="Longitude (ex. -77.0364)" name="longitude" id="longitude" required>
        <hr>

        <p> Click button below to save the marker</p>
        <button type="submit" class="createbtn">Edit Marker</button>
      </div>

    </form>
  </body>
</html>
