<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Map</title>
  <style>
    #map {
      height: 400px;
      width: 50%;
    }
  </style>
</head>
<body>
  <div id="map"></div>
  <script> 
    function initMap(){
      let options = {
        zoom: 12,
        center: {lat: 53.5461, lng: -113.4937}
      }

      let map = new google.maps.Map(document.getElementById('map'), options);

      let marker = new google.maps.Marker({
        position:{lat: 53.5225, lng: -113.6242},
        map:map
      })

      let infoWindow = new google.maps.InfoWindow({
        content:'<h3>West Edmonton Mall</h3><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/77/West_Edmonton_Mall%2C_Edmonton%2C_Alberta_%2822094236672%29.jpg/270px-West_Edmonton_Mall%2C_Edmonton%2C_Alberta_%2822094236672%29.jpg" alt="West Edmonton Mall">'
      })

      marker.addListener('click', function(){
        infoWindow.open(map, marker);
      })
    }


    // Testing stuff down here:
    function addMarker(coords, map){
      let marker = new google.maps.Marker({
        position: coords,
        map: map
      })
    }
  </script>
  <script async
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDyx9AbptmMmtS7aQYtOxVJDalv7Z-aHA&callback=initMap">
  </script>
</body>
</html>